.profile-content
  %h3 Please supply the following details about your organization
  = simple_form_for(@user) do |f|
    = f.error_notification
    .form-inputs
      .row
        .col-md-6
          %h4 Agency Basics
        .col-md-6
          %h4 General Contact Information
      .row
        .col-md-6
          = f.input :agency_name
          = f.input :street_address
          = f.input :city
          = f.input :state
          = f.input :zip
          = f.input :tax_id, label: 'Tax ID/EIN'
        .col-md-6
          = f.input :contact_name
          = f.input :contact_phone
          = f.input :contact_email
      %hr.featurette-divider
        .row
          .col-md-6
            %h4 Daily Food Recovery Contact Information
        .row
          .col-md-6
            =f.input :dfr_contact_name
            =f.input :dfr_contact_email
            =f.input :dfr_contact_office_phone
            =f.input :dfr_contact_cell_phone
            =f.input :dfr_preffered_contact_method
      %hr.featurette-divider
        .row
          .col-md-6
            %h4 Donation Acceptance Schedule
        .row
          .col-md-6
            %h4 Sunday Hours
            =f.simple_fields_for :hours_of_donations do |h|
              = h.input :day_of_week, :as => :hidden, :input_html => { :value => "0" }
              = h.input :open_at_hour
              = h.input :open_at_minute
              = h.input :close_at_hour
              = h.input :close_at_minute
          .col-md-6
            %h4 Monday Hours
            =f.simple_fields_for :hours_of_donations do |h|
              = h.input :day_of_week, :as => :hidden, :input_html => { :value => "1" }
              = h.input :open_at_hour
              = h.input :open_at_minute
              = h.input :close_at_hour
              = h.input :close_at_minute
    .text-sm-right
      .form-actions
        .row
          .col-md-9
            = f.button :submit, "Save Details", { class: 'btn btn-success' }
